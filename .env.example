# 環境變數範本
# 複製此文件為 .env 並填入實際值

# 管理 API 配置
MANAGEMENT_API_URL=http://192.168.10.100/api/v2/consumption/task
MANAGEMENT_API_TOKEN=your_jwt_token_here

# 資料目錄配置
DATA_DIR=./data
PLOTS_DIR=./plots

# API 逾時設定
API_TIMEOUT=30

# 資料點數設定 (每10分鐘一個點，一天144個點)
DATA_POINTS=144

# 日誌等級
LOG_LEVEL=INFO

# Redis 配置 (可選)
REDIS_URL=redis://localhost:6379

# Docker 相關配置
COMPOSE_PROJECT_NAME=gpu-monitor